{
  "name": "hopverkefni1",
  "version": "1.0.0",
  "description": "Verkefnið felst í því að smíða vef eftir forskrift.",
  "main": "index.js",
  "scripts": {
    "browser-sync": "browser-sync start --server --files index.html styles.css",
    "sass": "node-sass --source-map-embed styles.scss styles.css",
    "sass-watch": "node-sass --source-map-embed --watch styles.scss --recursive styles.css",
    "dev": "npm-run-all --parallel sass browser-sync sass-watch",
    "lint": "stylelint styles.scss --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pas222/Hopverkefni1.git"
  },
  "author": "PALLIOGSÖLVI",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pas222/Hopverkefni1/issues"
  },
  "homepage": "https://github.com/Pas222/Hopverkefni1#readme",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.6.0",
    "stylelint-config-primer": "^2.2.11"
  },
  "dependencies": {
    "sass-watch": "^0.1.0",
  }
}
